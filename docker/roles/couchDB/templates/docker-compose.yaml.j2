version: '3.6'

services:
  db:
    image: ibmcom/couchdb3:3.0.0
    restart: always
    ports:
      - 5984:5984
      - 5986:5986
      - 4369:4369
      - 9100-9200:9100-9200
    container_name: couchdb-slave
    environment:
      COUCHDB_USER: {{ database_user }}
      COUCHDB_PASSWORD: {{ database_password }}
      NOOENAME: {{ host_name }}
      COUCHDB_SECRET: {{ cookie }}
      ERL_FLAGS: -setcookie {{ cookie }} -name {{ host_name }}
    volumes:
      - {{ couchdb_dir }}:/var/lib/couchdb
